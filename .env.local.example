# Voygent Local Environment Configuration
# Copy this file to .env.local and add your actual secrets
# NEVER commit .env.local to git!

# LLM Provider API Keys
ANTHROPIC_API_KEY=sk-ant-your-key-here
# OPENAI_API_KEY=sk-your-openai-key-here  # Optional for validation/embeddings

# Database
DATABASE_URL=postgresql://voygent:password@localhost:5432/voygent-prod
DATABASE_URL_TEST=postgresql://voygent:password@localhost:5432/voygent-test

# Redis
REDIS_URL=redis://localhost:6379

# Stripe (use test keys for local development)
STRIPE_SECRET_KEY=sk_test_your-stripe-test-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Session Secrets (generate with: openssl rand -base64 32)
SESSION_SECRET=your-session-secret-here
JWT_SECRET=your-jwt-secret-here

# OAuth (optional for local dev)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# GitHub API (for MCP itinerary publishing)
# GITHUB_TOKEN=ghp_your-github-token

# Development Overrides
NODE_ENV=development
LOG_LEVEL=debug
TELEMETRY_SAMPLING=0.1

# Local URLs
PUBLIC_URL=http://localhost:3008
CORS_ORIGIN=http://localhost:3008
