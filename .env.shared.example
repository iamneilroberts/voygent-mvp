# Voygent Shared Environment Configuration
# Copy this file to .env.shared and customize as needed
# This file contains non-sensitive defaults shared across environments

# Application
APP_NAME=Voygent
NODE_ENV=development
PORT=3008

# Branding
BRANDING_PRIMARY=#0E7490
BRANDING_ACCENT=#14B8A6

# Feature Flags
FEATURE_TRAVEL_MODE=true
FEATURE_PROGRESS=true
FEATURE_COST_PANEL=true
FEATURE_TELEMETRY=true
FEATURE_VALIDATION=false

# Default Settings
DEFAULT_ASSISTANT=travel_agent
DEFAULT_MODEL_PROVIDER=anthropic
DEFAULT_MODEL=claude-3-5-sonnet-20241022

# Telemetry & Logging
TELEMETRY_SAMPLING=1.0
LOG_LEVEL=info

# Token Pricing (USD per 1K tokens)
TOKEN_PRICE_USD_INPUT=0.003
TOKEN_PRICE_USD_OUTPUT=0.015

# URLs
PUBLIC_URL=http://localhost:3008
HEALTHCHECK_PATH=/healthz

# Database (use .env.local for actual credentials)
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis (use .env.local for actual credentials)
REDIS_TTL_SESSIONS=604800
REDIS_TTL_CACHE=3600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# Session
SESSION_TTL_MS=900000
REFRESH_TOKEN_TTL_MS=604800000

# CORS
CORS_ORIGIN=http://localhost:3008

# LibreChat Compatibility
CHAT_TITLE_MAX_LENGTH=100
MESSAGE_MAX_LENGTH=10000
